@model ProductManagement.Models.ViewModel.ShoppingCartViewModel
@{
    ViewData["Title"] = "Shopping Cart";
}

<br/>
<h2 class="text-info">Shopping Cart</h2>

@if (@Model.Products.Count > 0)
{
    <form method="post">
        <div class="container border" style="padding: 15px;">
            <div class="row">
                <div class="col-8" style="border-right: 1px solid #bbb9b9">
                    <partial name="_ProductAppointmentDetailPartial" model="@Model.Products"/>
                </div>
                <div class="col-4" style="padding-left: 30px">
                    <div class="col-12">
                        <label>Name:</label>
                    </div>
                    <div class="col-12" style="padding-bottom: 15px">
                        <input asp-for="Appointments.CustomerName" class="form-control"/>
                    </div>
                    <div class="col-12">
                        <label>Phone Number:</label>
                    </div>
                    <div class="col-12" style="padding-bottom: 15px">
                        <input asp-for="Appointments.CustomerPhoneNumber" class="form-control"/>
                    </div>
                    <div class="col-12">
                        <label>Email:</label>
                    </div>
                    <div class="col-12" style="padding-bottom: 15px">
                        <input asp-for="Appointments.CustomerEmail" class="form-control"/>
                    </div>
                    <div class="col-12">
                        <label>Appointment Date:</label>
                    </div>
                    <div class="col-12" style="padding-bottom: 15px">
                        <input asp-for="Appointments.AppointmentDate" type="text" value="" id="datepicker" class="form-control"/>
                    </div>
                    <div class="col-12">
                        <label>Appointment Time:</label>
                    </div>
                    <div class="col-12" style="padding-bottom: 15px">
                        <input asp-for="Appointments.AppointmentTime" type="text" value="" class="timepicker form-control"/>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-success">Schedule Appointment</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div class="text-info">
        No items added to the shopping cart...
    </div>
}

@section Scripts
{
    <script>
        $("#datepicker").datepicker({
            minDate: '+1d',
            maxDate: '+3m'
        });
        $('.timepicker').timepicker({
            timeFormat: 'h:mm p',
            interval: 60,
            minTime: '10',
            maxTime: '6:00pm',
//            defaultTime: '11',
            startTime: '10:00',
            dynamic: false,
            dropdown: true,
            scrollbar: true
        });
    </script>
}