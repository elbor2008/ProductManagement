@model ApplicationUser
@{
    ViewData["Title"] = "Delete";
}

<br/>
<h2 class="text-info">Delete Admin User</h2>

<form method="post">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="Name" disabled="disabled" class="form-control"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Email"></label>
            </div>
            <div class="col-8">
                <input asp-for="Email" disabled="disabled" class="form-control"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="PhoneNumber"></label>
            </div>
            <div class="col-8">
                <input asp-for="PhoneNumber" disabled="disabled" class="form-control"/>
            </div>
        </div>
    </div>
    <br/>
    <div class="form-group">
        <input type="submit" class="btn btn-danger" value="Delete"/>
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>