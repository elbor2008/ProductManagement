@using ProductManagement.Extensions
@model ProductManagement.Models.ViewModel.ProductsViewModel
@{
    ViewData["Title"] = "Create";
}

<br/>
<h2 class="text-info">Create Product</h2>

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-lg-2">
            <label asp-for="Products.Name"></label>
        </div>
        <div class="col-lg-5">
            <input asp-for="Products.Name" class="form-control"/>
        </div>
        <span asp-validation-for="Products.Name" class="text-danger"></span>
    </div>
    <br/>
    <div class="form-group row">
        <div class="col-lg-2">
            <label asp-for="Products.Price"></label>
        </div>
        <div class="col-lg-5">
            <input asp-for="Products.Price" class="form-control"/>
        </div>
        <span asp-validation-for="Products.Price" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-lg-2">
            <label asp-for="Products.Image"></label>
        </div>
        <div class="col-lg-5">
            <input type="file" name="file" class="form-control"/>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-2">
            <label asp-for="ProductTypes"></label>
        </div>
        <div class="col-lg-5">
            <select asp-for="Products.ProductTypeId" asp-items="@Model.ProductTypes.ToSelectListItem(@Model.Products.ProductTypeId)" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-2">
            <label asp-for="SpecialTags"></label>
        </div>
        <div class="col-lg-5">
            <select asp-for="Products.SpecialTagId" asp-items="@Model.SpecialTags.ToSelectListItem(@Model.Products.SpecialTagId)" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-2">
            <label asp-for="Products.ShadeColor"></label>
        </div>
        <div class="col-lg-5">
            <input asp-for="Products.ShadeColor" class="form-control"/>
        </div>
        <span asp-validation-for="Products.ShadeColor" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-lg-2">
            <label asp-for="Products.Available"></label>
        </div>
        <div class="col-lg-5">
            <input type="checkbox" asp-for="Products.Available"/>
        </div>
    </div>
    <br/>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Create"/>
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}