@using ProductManagement.Extensions
@model ProductManagement.Models.ViewModel.ProductsViewModel
@{
    ViewData["Title"] = "Delete";
}

<br/>
<h2 class="text-info">Delete Product</h2>

<form method="post">
    <div class="row">
        <div class="col-lg-8">
            <div class="form-group row">
                <div class="col-lg-4">
                    <label asp-for="Products.Name"></label>
                </div>
                <div class="col-lg-8">
                    <input asp-for="Products.Name" disabled="disabled" class="form-control"/>
                </div>
            </div>
            <br/>
            <div class="form-group row">
                <div class="col-lg-4">
                    <label asp-for="Products.Price"></label>
                </div>
                <div class="col-lg-8">
                    <input asp-for="Products.Price" disabled="disabled" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-4">
                    <label asp-for="ProductTypes"></label>
                </div>
                <div class="col-lg-8">
                    <input asp-for="Products.ProductTypes.Name" disabled="disabled" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-4">
                    <label asp-for="SpecialTags"></label>
                </div>
                <div class="col-lg-8">
                    <input asp-for="Products.SpecialTags.Name" disabled="disabled" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-4">
                    <label asp-for="Products.ShadeColor"></label>
                </div>
                <div class="col-lg-8">
                    <input asp-for="Products.ShadeColor" disabled="disabled" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-4">
                    <label asp-for="Products.Available"></label>
                </div>
                <div class="col-lg-8">
                    <input type="checkbox" disabled="disabled" asp-for="Products.Available"/>
                </div>
            </div>
        </div>
        <div class="col-lg-1"></div>
        <div class="col-lg-3">
            <img src="@Model.Products.Image" style="border: 1px solid #eee; border-radius: 5px; width: 277px; height: 185px"/>
        </div>
    </div>
    <br/>
    <div class="form-group">
        <input type="submit" class="btn btn-danger" asp-route-id="@Model.Products.Id" value="Delete"/>
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>