@model IEnumerable<Products>
@{
    ViewData["Title"] = "Index";
}

<br/>

<div class="row">
    <div class="col-lg-6">
        <h2 class="text-info">Product List</h2>
    </div>
    <div class="col-lg-6 text-right">
        <a asp-action="Create" class="btn btn-info">
            <i class="fas fa-plus"></i>
            New Product
        </a>
    </div>
</div>
<br/>
<div>
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Price)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Available)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.ProductTypes)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.SpecialTags)
            </th>
            <th></th>
        </tr>
        @foreach (Products item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Name)</td>
                <td>@string.Format("{0:C}", item.Price)</td>
                <td>@Html.DisplayFor(m => item.Available)</td>
                <td>@Html.DisplayFor(m => item.ProductTypes.Name)</td>
                <td>
                    @if (!item.SpecialTags.Name.Equals("--None--"))
                    {
                        @Html.DisplayFor(m => item.SpecialTags.Name)
                        ;
                    }
                </td>
                <partial name="_TableButtonPartial" model="@item.Id"/>
            </tr>
        }
    </table>
</div>