@model List<Products>

@if (Model.Count > 0)
{
    <table class="table table-striped" width="100%">
        <tr class="table-info">
            <th style="text-align: center; width: 20%"></th>
            <th style="text-align: center">
                @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
            </th>
            <th style="text-align: center">
                @Html.DisplayNameFor(model => model.FirstOrDefault().Price)
            </th>
            <th style="text-align: center">
                @Html.DisplayNameFor(model => model.FirstOrDefault().ShadeColor)
            </th>
            <th style="text-align: center">
                @Html.DisplayNameFor(model => model.FirstOrDefault().ProductTypes)
            </th>
            @* <th style="text-align: center"></th> *@
        </tr>
        @foreach (Products p in @Model)
        {
            <tr style="padding: 50px">
                <td>
                    <a asp-area="Customer" asp-controller="Home" asp-action="Detail" asp-route-id="@p.Id">
                        <img src="@p.Image" style="border: 1px solid #bbb9b9; border-radius: 5px; width: 100%; height: 85px"/>
                    </a>
                </td>
                <td style="text-align: center">
                    @Html.DisplayFor(model => p.Name)
                </td>
                <td style="text-align: center">
                    @Html.DisplayFor(model => p.Price)
                </td>
                <td style="text-align: center">
                    @Html.DisplayFor(model => p.ShadeColor)
                </td>
                <td style="text-align: center">
                    @Html.DisplayFor(model => p.ProductTypes.Name)
                </td>
                @* <td style="text-align: center"> *@
                @*     <button type="submit" asp-action="Remove" asp-route-id="@p.Id" class="btn btn-danger"> *@
                @*         <i class="fas fa-trash-alt"></i> *@
                @*     </button> *@
                @* </td> *@
            </tr>
        }
    </table>
}
else
{
    <div>No items added to the shopping cart...</div>
}