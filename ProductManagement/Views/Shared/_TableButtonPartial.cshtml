@model int

<td style="width: 150px">
    <div class="btn-group" role="group">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model">
            <i class="fas fa-edit"></i>
        </a>
        <a class="btn btn-success" asp-action="Detail" asp-route-id="@Model">
            <i class="fas fa-list-ul"></i>
        </a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model">
            <i class="fas fa-trash-alt"></i>
        </a>
    </div>
</td>